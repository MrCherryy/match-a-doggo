<div class="container mt-3">
  <div class="container text-center"><h1>Add new doggo</h1></div>
  <% breeds = Dog::BREED.unshift('') %>
  <%= simple_form_for @dog do |f| %>
    <%= f.input :name, label: false, placeholder: 'Name' %>
    <%= f.select :breed, breeds %>
    <%= f.select :gender, Dog::GENDER %>
    <%= f.input :birthdate, as: :string, required: false, input_html: {id: "datepicker"} %>
    <%= f.input :pedigree %>
    <%= f.input :address, label: false, placeholder: 'Address' %>
    <%= f.input :photo, as: :file, label: 'Add a photo' %>
    <%= f.button :submit, class: 'btn btn-primary btn-sm'  %>
  <% end %>
</div>
