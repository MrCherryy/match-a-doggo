<div class="container mt-3">
  <h1 class="text-center">Edit your doggo</h1>
  <%= simple_form_for @dog do |f| %>
    <%= f.input :address %>
    <%= f.input :matchable %>
    <%= f.submit 'Update dog', class: 'btn btn-primary btn-sm'  %>
  <% end %>
  <br>
  <%= link_to raw('<i class="fas fa-chevron-left"></i>'), :back, class: 'btn btn-outline-primary' %> <%# profile_path(@user) %>
  <%= link_to raw('<i class="far fa-trash-alt"></i>'), dog_path(@dog), method: :delete, data: { confirm: "Remove #{@dog.name}?" }, class: 'btn btn-danger btn-sm' %>
</div>
