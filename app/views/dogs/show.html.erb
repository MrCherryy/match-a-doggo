<div class="dog-card-show">
  <div class="card-img-show", style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0.7)), url('<%= cl_image_path(@dog.photo.key)%>')">
    <h2><%= @dog.name %></h2>
    <div class="back-button">
      <%= link_to :back do %>
        <i class="fas fa-chevron-circle-left"></i>
      <% end %>
    </div>
    <div class="match-buttons">
      <%= link_to matches_path(authenticity_token: form_authenticity_token, match: { matching_dog_id: current_user.dogs.first, matched_dog_id: @dog.id, status: Match::STATUS[2]}), class: "r-match", method: :post do %>
        <i class="fas fa-times-circle"></i>
      <% end %>
      <%= link_to matches_path(authenticity_token: form_authenticity_token, match: { matching_dog_id: current_user.dogs.first, matched_dog_id: @dog.id, status: Match::STATUS[0]}), class: "a-match", method: :post do %>
        <i class="fas fa-check-circle"></i>
      <% end %>
    </div>
  </div>
  <div class="card-description-show">
    <div class="basic-dog-info">

      <h5>Address: <%= @dog.address %></h5>
      <h5>Breed: <%= @dog.breed %></h5>
      <h5>Age: <%= @dog.age[:year] %> years and <%= @dog.age[:month] %> months</h5>
      <h5>Pedigree: <%= @dog.pedigree %></h5>
      <h5>Gender: <%= @dog.gender %></h5>

    </div>
    <div class="dog-description">
      <p>"Such short little lives our pets have to spend with us, and they spend most of it waiting for us to come home each day."
      </p>
    </div>
  <div id="map"
    style="width: 100%; height: 400px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  </div>
