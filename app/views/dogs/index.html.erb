<h1 class='text-center'><%= @dogs.count %></h1>
<div class="tinder">
  <div class="tinder--status">
    <i class="fas fa-times"></i>
    <i class="fa fa-heart"></i>
  </div>

  <div class="tinder--cards">
    <% @dogs.each do |dog| %>
      <div class="tinder--card" data-matched-dog="<%= dog.id%>" data-matching-dog="<%= current_dog.id %>">
        <img src='<%= cl_image_path(dog.photo.key)%>'>
        <h3><%= dog.name %></h3>
        <p><%= dog.address %></p><a href="<%= dog_path(dog)%>"><i class="fas fa-info-circle"></i></a>
      </div>
    <% end %>
  </div>
  <div class="tinder--buttons">
    <button id="nope";"><i class="fas fa-times"></i></button>
    <button id="love"><i class="fa fa-heart"></i></button>
  </div>

</div>
