<div class="bottom-bar">
  <div class="nav-icon">
    <div class="profile-icon <%= active_class(edit_user_registration_path)%>">
      <%= link_to  edit_user_registration_path, class: "profile-page-icon" do %>
        <i class="far fa-user"></i>
      <% end %>
    </div>
    <% if current_user %>
      <div class="sessions-icon <%= active_class(dogs_profile_path(current_user))%>">
        <%= link_to dogs_profile_path(current_user), class: "sessions-page-icon" do %>
          <i class="fas fa-dog"></i>
        <% end %>
      </div>
    <% end %>
    <div class="index-icon <%= active_class(dogs_path)%>">
      <%= link_to dogs_path, class: "matches-page-icon" do %>
        <i class="fas fa-paw"></i>
      <% end %>
    </div>
    <div class="matches-icon <%= active_class(matches_path)%>">
      <%= link_to matches_path, class: "matches-page-icon" do %>
        <i class="far fa-comments"></i>
        <% if Match.where(matched_dog: Dog.find_by(name: current_dog.name)).where(status: "pending").count != 0 %>
          <div class="notification-r">
            <p><%= Match.where(matched_dog: Dog.find_by(name: current_dog.name)).where(status: "pending").count%></p>
          </div>
        <% end %>
      <% end %>
    </div>
</div>
